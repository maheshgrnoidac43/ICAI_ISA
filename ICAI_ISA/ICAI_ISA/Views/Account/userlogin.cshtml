@model ICAI_ISA.Model.MemberDetail

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6 border border-info p-3">
            @using (Html.BeginForm("UserLogin", "Account", FormMethod.Post, new {@class = "form-horizontal"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                <div class="form-group pt-2">
                    <label class="control-label">Membership Number</label><span class="text-danger"><strong>*</strong></span>
                    @Html.TextBoxFor(m => m.MembershipNo, new { @class = "form-control", id = "MembershipNo", required = "required", autofocus = "autofocus" })
                </div>
                <div class="form-group pt-2">
                    <label class="control-label">ISA Registration No</label><span class="text-danger"><strong>*</strong></span>
                    @Html.TextBoxFor(m => m.RegistrationNo, new { @class = "form-control", id = "RegistrationNo", required = "required" })
                </div>
                <div class="form-group pt-2">
                    <table>
                        <tr>
                            <td>
                                <label class="control-label">Security Key</label><span class="text-danger"><strong>*</strong></span>
                                <input class="form-control captchaTextBox" type="text" readonly="readonly" />
                            </td>
                            <td class="pt-4">
                                <img alt="" src="../images/refersh.jpg" class="captcharefresh" onclick="DrawCaptcha();" />
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="form-group pt-2">
                    <label class="control-label">Please enter the security key from the image into the Textbox provided. This key is used to verify that this page is not accessed by any automated processes.</label>
                    <input class="form-control" type="text" />
                </div>
                <div class="form-group text-center pt-2">
                    <input type="submit" value="Login" class="btn btn-sm btn-primary" />
                    <input type="reset" value="Reset" class="btn btn-sm btn-secondary" />
                </div>
            }            
        </div>
        <div class="col-sm-3"></div>
    </div>
</div>
<br />

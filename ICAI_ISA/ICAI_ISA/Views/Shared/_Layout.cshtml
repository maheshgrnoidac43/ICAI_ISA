        <div class="row m-auto bg-secondary">
            <div class="col-1"></div>
            <div class="col-10">
                <nav class="navbar navbar-expand-lg navbar-dark bg-secondary">
                    <div class="container-fluid">
                        <a class="navbar-brand" asp-area="" asp-controller="Info" asp-action="Welcome">Home</a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                @*<li class="nav-item">
                                    <a class="nav-link active" aria-current="page" href="#">Home</a>
                                </li>*@
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Info" asp-action="Instruction">Guidance Note</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Info" asp-action="ExamCenter">Exam Centers</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Info" asp-action="importantdates">Important Dates</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Info" asp-action="ContactUs">Contact Us</a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
